<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetalleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        >
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Num. Inventario:"
            android:layout_weight=".3"/>
        <TextView
            android:id="@+id/txtNumInventario"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="Num Inventario"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        >
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n:"
            android:layout_weight=".3"/>
        <TextView
            android:id="@+id/txtDescripcion"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:lines="4"
            android:text="Descripcion"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        >
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Responsable:"
            android:layout_weight=".3"/>
        <TextView
            android:id="@+id/txtResponsable"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:lines="2"
            android:text="Responsable"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        >
        <TextView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Departamento:"
            android:layout_weight=".3"/>
        <TextView
            android:id="@+id/txtDepartamento"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="Departamento"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        >
        <Button
            android:id="@+id/btnProcesar"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Procesar"
            android:layout_weight=".5"
            />
        <TextView
            android:layout_width="6sp"
            android:layout_height="2sp"/>
        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:layout_weight=".5"
            />

    </LinearLayout>

</LinearLayout>